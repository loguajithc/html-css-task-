<body>

    <div class="main">
        <h2>Task Manager</h2>

        <div class="sub-a">
            <input type="text" id="in" placeholder="What needs to be done?" />
            <button class="b1" id="b1" onclick="fun()">Add Task</button>
        </div>

        <div class="task">
            <table width="100%" cellpadding="10">
                <tbody id="b">
                </tbody>
            </table>
        </div>
    </div>

    <script>
        const input=document.getElementById("in");
        const tableBody=document.getElementById("b");

        function fun(){
            const taskName= input.value;

            if(taskName=== "") {
                console.log("Please enter the task name");
                return;
            }
            const row = document.createElement("tr");
            row.innerHTML=`
                <td><a class="fa-solid fa-check"></a></td>
                <td>${taskName}</td>
                <td><button class="but">Remove</button></td>`;
            tableBody.appendChild(row);
            input.value = "";
            const removeBtn = row.querySelector(".but");
            removeBtn.addEventListener("click", function(){
                const taskText=this.parentElement.previousElementSibling;
                const confirmDelete= confirm("are you want to remove?");
                if (confirmDelete){
                    taskText.style.textDecoration ="line-through";
                    taskText.style.color="darkgray";
                }
            });
        }
    </script>
